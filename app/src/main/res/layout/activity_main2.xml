<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:background="@mipmap/main_bgg">

        <!-- ==============标题栏===============-->
        <LinearLayout
            android:id="@+id/lin_title"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="157dp"
                android:layout_height="58dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/main_title_icon" />

            <ImageView
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/main_er_code" />

            <TextView
                android:id="@+id/tv_title_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dimen_30"
                android:text="当前显示"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <!--===============中间碎片布局===================-->

        <FrameLayout
            android:id="@+id/frame_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin_title"
            android:layout_marginTop="40dp"
            android:descendantFocusability="afterDescendants"
            android:nextFocusDown="@+id/grid_menu_main" />

        <!--==============跑马灯效果文字===================-->
        <com.mirror.view.MarqueeText
            android:id="@+id/tv_mv_notice"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@+id/lin_bottom_layout"
            android:layout_marginLeft="30dp"
            android:focusable="false"
            android:gravity="center_vertical"
            android:text="商务合作 :  714047331@qq.com"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            app:speed="30"
            app:type="left_out" />
        <!--===============底部菜单===================-->
        <LinearLayout
            android:id="@+id/lin_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:background="#A46CC7"
            android:orientation="horizontal"
            android:padding="3dp">

            <!--美发、电视-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rela_hair"
                    style="@style/main_rela_style">

                    <ImageView
                        style="@style/main_btn_style"
                        android:background="@mipmap/main_icon_hair" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_tv"
                    style="@style/main_rela_style">

                    <ImageView
                        style="@style/main_btn_style"
                        android:background="@mipmap/main_icon_tv" />
                </RelativeLayout>
            </LinearLayout>

            <!--美甲、卡通-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rela_finger"
                    style="@style/main_rela_style">

                    <ImageView
                        style="@style/main_btn_style"
                        android:background="@mipmap/main_icon_beautiful" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rela_carton"
                    style="@style/main_rela_style">

                    <ImageView
                        style="@style/main_btn_style"
                        android:background="@mipmap/main_icon_cartong" />
                </RelativeLayout>
            </LinearLayout>


            <!--美体、直播-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rela_body"
                    style="@style/main_rela_style">

                    <ImageView
                        style="@style/main_btn_style"
                        android:background="@mipmap/main_icon_body" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_live"
                    style="@style/main_rela_style">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/main_icon_live" />
                </RelativeLayout>
            </LinearLayout>

            <!--电影、投屏-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rela_movie"
                    style="@style/main_rela_style">

                    <ImageView
                        style="@style/main_btn_style"
                        android:background="@mipmap/main_icon_movie" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_screen"
                    style="@style/main_rela_style">

                    <ImageView
                        style="@style/main_btn_style"
                        android:background="@mipmap/main_icon_screen" />
                </RelativeLayout>
            </LinearLayout>


            <GridView
                android:id="@+id/grid_menu_main"
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="4.0"
                android:focusable="true"
                android:listSelector="@color/transparent"
                android:nextFocusRight="@+id/rela_db_hair"
                android:nextFocusUp="@id/frame_content"
                android:numColumns="4"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rela_db_hair"
                    style="@style/main_rela_style">

                    <ImageView
                        style="@style/main_btn_style"
                        android:background="@mipmap/main_icon_db_hair" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/fragment_cycle_viewpager_content"
        android:name="com.mirror.view.ad.CycleViewPager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:focusable="false" />

</LinearLayout>

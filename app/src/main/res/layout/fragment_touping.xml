<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/touping">

    <TextView
        android:id="@+id/conn_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="750dp"
        android:text="1121211"
        android:textColor="@color/textdec"
        android:textSize="22px" />

    <TextView
        android:id="@+id/devi_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="745dp"
        android:textColor="@color/textdec"
        android:text="1121211"
        android:textSize="20px" />


    <ImageView
        android:id="@+id/touping_er"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/main_er_code"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_120"
        android:layout_marginTop="280dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备ID："
            android:textSize="30px" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="当前WIFI: "
                android:textSize="16px" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="请扫描二维码，下载投屏客户端"
            android:textColor="#A46CC7"
            android:textSize="16px" />

    </LinearLayout>
</RelativeLayout>
